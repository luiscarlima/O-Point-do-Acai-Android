<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:layout_centerHorizontal="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/img_beer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/beericon"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/txt_name_beer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:text="Nome Bebida"
            android:layout_toRightOf="@+id/img_beer"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_description_beer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Descrição Bebida"
            android:layout_toRightOf="@+id/img_beer"
            android:layout_below="@+id/txt_name_beer"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_beer_price"
            android:text="7,00"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"/>

        <TextView
            android:id="@+id/txt_beer_reais"
            android:text="R$"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorPrimary"
            android:layout_toLeftOf="@+id/txt_beer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>