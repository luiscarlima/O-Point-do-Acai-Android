<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signup_background_new"
    tools:context=".Welcome">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/img_welcome"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logocwhite"/>

        <LinearLayout
            android:id="@+id/ll_horarios"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_welcome">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/icon_calender_hour"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horário de Funcionamento"
                android:textColor="@color/colorTextWithe"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/source_sans_pro"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_horarios">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terça a Domingo das 14:00 h às 22:00 h"
                android:textColor="@color/colorTextWithe"
                android:textSize="16sp"
                android:fontFamily="@font/source_sans_pro"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_week">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:text="Delivery até às 21:30 hrs"
                android:textColor="@color/colorTextWithe"
                android:textSize="16sp"
                android:fontFamily="@font/source_sans_pro"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_delivery">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/icon_map_iphone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mogi Mirim e Mogi Guaçu"
                android:textColor="@color/colorTextWithe"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/source_sans_pro"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_wave">

        <Button
            android:id="@+id/click"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_main_background"
            android:fontFamily="@font/source_sans_pro"
            android:text="Começar"
            android:textColor="#fff"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/click"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/icon_phne_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(19) 3549-7002"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/source_sans_pro"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_whats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    app:srcCompat="@drawable/icon_whats_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(19) 98974-5656"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/source_sans_pro"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>